<ProjectViewWindow>:
    id: project_view_window
    name: 'project_view_window'

    BoxLayout:
        #cols: 2
        # I added colors to see the layout position
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            size_hint: .2, 1

            StackLayout:
                orientation: "tb-lr"
                padding: [10, 10, 10, 10]
                spacing: [0, 10]

                Button:
                    id: table_button
                    size_hint: 1, 0.15
                    text: "Table"

                Button:
                    id: dialogue_creator_button
                    size_hint: 1, 0.15
                    text: "Dialogue"

            StackLayout:
                orientation: "bt-lr"
                padding: [10, 10, 10, 10]
                spacing: [0, 10]

                Button:
                    id: back_to_menu_button
                    size_hint: 1, 0.15
                    text: "Back to menu"

                Button:
                    id: save_project_button
                    size_hint: 1, 0.15
                    text: "Save project"


        RelativeLayout:
            id: window
            size_hint: .8, 1
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    # self here refers to the widget i.e FloatLayout
                    pos: (0, 0)
                    size: self.size

            Label:
                pos_hint: {'x': 0, 'y': 0}
                text: "New project"
