<SpeechBubble>:
    size_hint: (None, None)


    Button:
        id: input_button
        size: (25, 25)
        size_hint: (None, None)
        pos: (self.parent.width/2 - self.width/2, self.parent.height - self.height)
        text: "O"


    BoxLayout:
        id: bubble_info_box
        orientation: "vertical"
        pos: (0, self.parent.height - self.height)
        size_hint: (1, 0.8)
        padding: [5, 0, 5, 0]

        Label:
            id: utterance_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'

    BoxLayout:
        size_hint: (1, 0.2)
        pos: (0, 0)

        BoxLayout:
            id: answers_box

