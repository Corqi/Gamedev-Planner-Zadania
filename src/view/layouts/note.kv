<Note>:
    size_hint: (None, None)


    BoxLayout:
        id: note_info_box
        orientation: "vertical"
        pos: (0, self.parent.height - self.height)
        padding: [5, 0, 5, 0]

        Label:
            id: utterance_label
            text_size: self.size
            halign: 'center'
            valign: 'middle'


<NotePopup>:
    background: 'atlas://data/images/defaulttheme/button_pressed'
    size_hint: (0.5, 0.7)

    title: "Edit"

    BoxLayout:
        spacing: 20
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            Label:
                size_hint: (1, 0.3)
                # You have to set the text size to change the text alignment
                text_size: self.size
                halign: 'left'
                text: "Utterance:"

            TextInput:
                id: utterance_text_input
                text: ""

        Button:
            id: back_button
            size_hint: (1, 0.3)
            text: 'Close!'

<NoteImage>:
    # size_hint: (400, 400)

    BoxLayout:
        id: image_info_box
        orientation: "vertical"
        size_hint: None, None
        padding: [10, 10, 10, 10]
        Image:
            id: image
            #source: 'anime.jpg'
            source: ''
            keep_ratio: True
            allow_stretch: False
            size_hint: None, None  # set size hint to none to turn off hint
            # size: None, None
            color: [1,1,1,1]
