<ProjectPickWindow>:
    id: project_pick_window
    name: 'project_pick_window'

    FloatLayout:
        cols: 1
        size_hint: .5, .5
        pos_hint: {'center_x':0.5, 'center_y':0.5}
        size_hint_min: 300, 200
        size_hint_max: 400, 300
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        GridLayout:
            cols:1
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            Button:
                id: open_project_button
                text: "Open project"
            Button:
                text: "Create new project"
