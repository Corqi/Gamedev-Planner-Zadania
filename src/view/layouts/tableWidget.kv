<TableWidget>
    id: table_widget
    name: "table_widget"
    pos_hint: {'x': 0, 'y': 0}

    canvas.before:
        Color:
            rgba: 0.2, 0.4, 0.2, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size

    ScrollView:
        id: scroll_view
        scroll_timeout: float('inf')

        #pos_hint: {'x': 0, 'y': 0}
        size_hint_y: 1

        canvas.before:
            Color:
                rgba: 31/255, 31/255, 31/255, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size


    StackLayout:
        orientation: "rl-tb"
        padding: [10, 10, 10, 10]
        spacing: [10, 10]
        size_hint_y: 0.1

        Button:
            id: add_new_note_button
            size_hint_y: 1
            size_hint_x: 0.06
            text: "+"

        Button:
            id: remove_note_button
            size_hint_y: 1
            size_hint_x: 0.06
            text: "-"
